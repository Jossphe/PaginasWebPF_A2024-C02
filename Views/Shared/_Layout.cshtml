<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reciclaje de Desechos Electrónicos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webaplicationPFSonsonate.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
 
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-white py-5" style="background-color: #214f4b;">
        <div class="container">
            <div class="row">
                <!-- Sección de Navegación -->
                <div class="col-md-4 mb-3">
                    <h5>Navegación</h5>
                    <ul class="list-unstyled">
                        <li><a href="#impacto" class="text-light">Impacto Ambiental</a></li>
                        <li><a href="#testimonios" class="text-light">Testimonios</a></li>
                        <li><a href="#recursos" class="text-light">Recursos</a></li>
                    </ul>
                </div>
                <!-- Sección de Redes Sociales -->
                <div class="col-md-4 mb-3">
                    <h5>Síguenos</h5>
                    <a href="https://www.facebook.com/" class="text-light mx-2"><i class="fab fa-facebook fa-lg"></i></a>
                    <a href="https://twitter.com/" class="text-light mx-2"><i class="fab fa-twitter fa-lg"></i></a>
                    <a href="https://www.instagram.com/" class="text-light mx-2"><i class="fab fa-instagram fa-lg"></i></a>
                    <a href="https://www.linkedin.com/" class="text-light mx-2"><i class="fab fa-linkedin fa-lg"></i></a>
                </div>
                <!-- Sección de Contacto -->
                <div class="col-md-4">
                    <h5>Contacto</h5>
                    <p>UNAB Campus Sonsonate</p>
                    <a href="@Url.Action("Contacto", "Home")" class="btn btn-outline-light btn-sm">Contáctanos</a>
                </div>
            </div>
            <hr class="bg-white">
            <p class="mb-0">&copy; 2024 Reciclaje Electrónico. Todos los derechos reservados.</p>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
